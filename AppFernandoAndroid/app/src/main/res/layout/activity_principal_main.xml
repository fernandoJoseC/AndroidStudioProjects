<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout"
    android:background="@color/dark_green"
    tools:context=".interface_user.Principal_main">

    <ScrollView
        style="@style/layout"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/layout_constraint_layout_principal_main">

            <TextView
                android:id="@+id/user_label"
                style="@style/layout_user_label"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_label"
                style="@style/layout_name_label"
                app:layout_constraintLeft_toLeftOf="@+id/user_label"
                app:layout_constraintRight_toRightOf="@+id/user_label"
                app:layout_constraintTop_toBottomOf="@+id/user_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_label_edit"
                    style="@style/layout_name_label_edit">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_label"
                style="@style/layout_edit_box"
                android:layout_marginTop="@dimen/space_between_edit_box"
                android:background="@drawable/contorno_white"
                android:hint="@string/last_name_user"
                android:textColorHint="@color/dark_grey"
                app:layout_constraintLeft_toLeftOf="@+id/name_label"
                app:layout_constraintRight_toRightOf="@+id/name_label"
                app:layout_constraintTop_toBottomOf="@+id/name_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/last_name_label_edit"
                    style="@style/layout_name_label_edit">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_label"
                style="@style/layout_phone_label"
                app:layout_constraintLeft_toLeftOf="@+id/last_name_label"
                app:layout_constraintRight_toRightOf="@+id/last_name_label"
                app:layout_constraintTop_toBottomOf="@+id/last_name_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_label_edit"
                    style="@style/layout_phone_label_edit">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_label"
                style="@style/layout_email_label"
                app:layout_constraintLeft_toLeftOf="@+id/phone_label"
                app:layout_constraintRight_toRightOf="@+id/phone_label"
                app:layout_constraintTop_toBottomOf="@+id/phone_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_label_edit"
                    style="@style/layout_email_label_edit">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button"
                style="@style/layout_button_enter"
                app:layout_constraintLeft_toLeftOf="@id/email_label"
                app:layout_constraintRight_toRightOf="@id/email_label"
                app:layout_constraintTop_toBottomOf="@id/email_label" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>