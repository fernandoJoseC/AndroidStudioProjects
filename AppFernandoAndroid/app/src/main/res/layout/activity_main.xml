<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_user_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_left_right"
            android:layout_marginTop="@dimen/top_border2"
            android:layout_marginRight="@dimen/border_left_right"
            android:text="@string/main"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/text_user_label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_left_right"
            android:layout_marginTop="@dimen/top_border"
            android:layout_marginRight="@dimen/border_left_right"
            android:paddingLeft="20dp"
            android:text="@string/user"
            android:textColor="@color/gris2"
            android:textSize="@dimen/text_height"
            app:layout_constraintLeft_toLeftOf="@id/text_user_label"
            app:layout_constraintRight_toRightOf="@id/text_user_label"
            app:layout_constraintTop_toBottomOf="@id/text_user_label" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_height"
            android:background="@drawable/contorno2"
            android:drawableRight="@drawable/ic_user"
            android:hint="@string/user"
            android:inputType="textUri"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            app:layout_constraintLeft_toLeftOf="@id/text_user_label2"
            app:layout_constraintRight_toRightOf="@id/text_user_label2"
            app:layout_constraintTop_toBottomOf="@id/text_user_label2" />

        <TextView
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_left_right"
            android:layout_marginTop="@dimen/top_border"
            android:layout_marginRight="@dimen/border_left_right"
            android:paddingLeft="20dp"
            android:text="@string/password"
            android:textColor="@color/gris2"
            android:textSize="@dimen/text_height"
            app:layout_constraintLeft_toLeftOf="@id/editTextTextPersonName"
            app:layout_constraintRight_toRightOf="@id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@id/editTextTextPersonName" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_height"
            android:background="@drawable/contorno2"
            android:drawableRight="@drawable/ic_baseline_vpn_key_24"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintLeft_toLeftOf="@id/text_user_label2"
            app:layout_constraintRight_toRightOf="@id/editTextTextPersonName2"
            app:layout_constraintTop_toBottomOf="@id/editTextTextPersonName2"

            />


        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_height"
            android:background="@drawable/contorno"
            android:text="@string/login"
            android:textColor="@color/gris1"
            android:textSize="@dimen/text_button"
            app:layout_constraintLeft_toLeftOf="@id/text_user_label2"
            app:layout_constraintRight_toRightOf="@id/editTextTextPassword"
            app:layout_constraintTop_toBottomOf="@id/editTextTextPassword" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_height"
            android:text="¿Tienes problemas para iniciar sesión?"
            android:textAlignment="textEnd"
            android:textColor="@color/gris2"
            android:textStyle="italic"

            app:layout_constraintLeft_toLeftOf="@id/button"
            app:layout_constraintRight_toRightOf="@id/button"
            app:layout_constraintTop_toBottomOf="@id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>