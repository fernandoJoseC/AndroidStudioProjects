<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout"
    android:background="@color/dark_green"
    tools:context=".MainActivity">

    <ScrollView
        style="@style/layout"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/layout_constraint_layout_main">

            <TextView
                android:id="@+id/login_label"
                style="@style/layout_login_label"
                app:layout_constraintTop_toTopOf="parent"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextUserName"
                style="@style/layout_editTextUserName"
                app:layout_constraintLeft_toLeftOf="@+id/login_label"
                app:layout_constraintRight_toRightOf="@+id/login_label"
                app:layout_constraintTop_toBottomOf="@+id/login_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextUserName_edit"
                    style="@style/layout_editTextUserName_edit"
                    tools:ignore="TouchTargetSizeCheck"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextPassword"
                style="@style/layout_editTextPassword"
                app:endIconDrawable="@drawable/ic_baseline_vpn_key_24"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/dark_grey"
                app:layout_constraintLeft_toLeftOf="@id/editTextUserName"
                app:layout_constraintRight_toRightOf="@id/editTextUserName"
                app:layout_constraintTop_toBottomOf="@+id/editTextUserName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPassword_edit"
                    style="@style/editTextPassword_edit"
                    android:textColor="@color/dark_grey">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/button"
                style="@style/layout_button_enter"
                app:layout_constraintLeft_toLeftOf="@id/editTextUserName"
                app:layout_constraintRight_toRightOf="@id/editTextPassword"
                app:layout_constraintTop_toBottomOf="@id/editTextPassword"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>