<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--"layouts for both activities"-->

    <style name="layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">"@font/barlow_bold"</item>
    </style>

    <style name="layout_main" parent="layout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="layout_prin_main" parent="layout">
        <item name="android:background">@color/white</item>
    </style>

    <!--layout_constraint_layout-->
    <style name="layout_constraint_layout" parent="layout">
        <item name="android:orientation">vertical</item>
    </style>

    <!--main buttonLoggin-->
    <style name="layout_button" parent="layout_edit_box">
        <item name="android:layout_marginTop">@dimen/top_button</item>
        <item name="android:background">@drawable/contorno</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>

    <!--####################################################################################-->

    <!--activity_main styles-->

    <!--layout_ConstraintLayout-->
    <style name="layout_ConstraintLayout" parent="layout_constraint_layout">
    </style>

    <!--"login_label"-->
    <style name="layout_login_label" parent="layout">
        <item name="android:layout_marginLeft">@dimen/border_left_right</item>
        <item name="android:layout_marginRight">@dimen/border_left_right</item>
        <item name="android:layout_marginTop">@dimen/top_border</item>
        <item name="android:text">@string/main</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="contentDescription">@string/main</item>
    </style>

    <!--main layout edit box-->
    <style name="layout_edit_box" parent="layout"><!--cambiar a layout_edit_text_user_name-->
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:paddingLeft">@dimen/padding_L_R</item>
        <item name="android:paddingRight">@dimen/padding_L_R</item>
        <item name="android:background">@drawable/contorno_white</item>
        <item name="android:fontFamily">"@font/barlow_semi_condensed_light"</item>

    </style>

    <!--"inputUserName"-->
    <style name="layout_inputUserName" parent="layout_edit_box">
        <item name="android:layout_marginTop">@dimen/top_edit_text_user_name</item>
        <item name="android:hint">@string/user</item>
        <item name="android:textColorHint">@color/light_grey_icons</item>
        <item name="contentDescription">@string/user</item>
    </style>

    <!--"inputUserName_edit"-->
    <style name="layout_inputUserName_edit" parent="layout">
        <item name="android:drawableLeft">@drawable/ic_baseline_person_24</item>
        <item name="android:inputType">textUri</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/padding_R</item>
    </style>

    <!--inputPassword-->
    <style name="layout_inputPassword" parent="layout_inputUserName">
        <item name="android:layout_marginTop">@dimen/space_between_edit_box</item>
        <item name="android:hint">@string/password</item>
        <item name="contentDescription">@string/password</item>
    </style>

    <!--inputPassword_edit-->
    <style name="layout_inputPassword_edit" parent="layout_inputUserName_edit">
        <item name="android:inputType">textUri</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_lock_24</item>
        <item name="android:drawablePadding">@dimen/padding_R</item>
    </style>

    <!--main buttonLoggin enter-->
    <style name="layout_buttonLoggin" parent="layout_button">
        <item name="android:text">@string/login</item>
        <item name="contentDescription">@string/login</item>
    </style>

    <!--####################################################################################-->

    <!--activity_principal_main styles-->

    <!--layout_ConstraintLayout_PM-->
    <style name="layout_ConstraintLayout_PM" parent="layout_constraint_layout">

    </style>

    <!--layout_user_label-->
    <style name="layout_user_label" parent="layout">
        <item name="android:layout_marginLeft">@dimen/border_left_right</item>
        <item name="android:layout_marginTop">@dimen/top_border</item>
        <item name="android:layout_marginRight">@dimen/border_left_right</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">@dimen/pad_left_layout_user_label_principal</item>
        <item name="android:paddingTop">@dimen/top_label</item>
        <item name="android:text">@string/user</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/space_between_edit_box</item>
        <item name="contentDescription">@string/user</item>
    </style>

    <!--layout_name_label-->
    <style name="layout_name_label" parent="layout_edit_box">
        <item name="android:layout_marginTop">@dimen/space_between_edit_box</item>
        <item name="android:hint">@string/name_user</item>
        <item name="android:textColorHint">@color/light_grey_icons</item>
        <item name="contentDescription">@string/name_user</item>
    </style>

    <!--layout_name_label_edit-->
    <style name="layout_name_label_edit" parent="layout">
        <item name="android:drawableLeft">@drawable/ic_baseline_person_24</item>
        <item name="android:inputType">textUri</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/padding_R</item>
    </style>

    <!--layout_last_name_label-->
    <style name="layout_last_name_label" parent="layout_name_label">
        <item name="android:hint">@string/last_name_user</item>
        <item name="contentDescription">@string/last_name_user</item>
    </style>

    <!--layout_last_name_label_edit-->
    <style name="layout_last_name_label_edit" parent="layout">
        <item name="android:drawableLeft">@drawable/ic_baseline_person_outline_24</item>
        <item name="android:inputType">textUri</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/padding_R</item>
    </style>

    <!--layout_phone_label-->
    <style name="layout_phone_label" parent="layout_edit_box">
        <item name="android:hint">@string/phone_number_user</item>
        <item name="android:layout_marginTop">@dimen/space_between_edit_box</item>
        <item name="android:textColorHint">@color/light_grey_icons</item>
        <item name="contentDescription">@string/phone_number_user</item>
    </style>

    <!--layout_phone_label_edit-->
    <style name="layout_phone_label_edit" parent="layout_name_label_edit">
        <item name="android:drawableLeft">@drawable/ic_baseline_local_phone</item>
        <item name="android:inputType">phone</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--layout_email_label-->
    <style name="layout_email_label" parent="layout_edit_box">
        <item name="android:layout_marginTop">@dimen/space_between_edit_box</item>
        <item name="android:hint">@string/email_user</item>
        <item name="android:textColorHint">@color/light_grey_icons</item>
        <item name="contentDescription">@string/email_user</item>
    </style>

    <!--layout_email_label_edit-->
    <style name="layout_email_label_edit" parent="layout_name_label_edit">
        <item name="android:drawableLeft">@drawable/ic_baseline_email_24</item>
        <item name="android:inputType">textWebEmailAddress</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--buttonAccept-->
    <style name="layout_buttonAccept" parent="layout_button">
        <item name="android:text">@string/button</item>
        <item name="contentDescription">@string/button</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>