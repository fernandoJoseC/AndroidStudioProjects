<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="layout_bg" parent="layout">
        <item name="android:background">@color/white_light</item>
    </style>

    <style name="logo_uide" parent="layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_logo</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="button_register">
        <item name="android:textColor">@color/red_logo</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/register</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginRight">@dimen/margin_L</item>
        <item name="android:layout_marginLeft">@dimen/margin_L</item>
        <item name="android:background">@drawable/contorno</item>
    </style>

    <style name="button_accept" parent="button_register">
        <item name="android:layout_marginTop">@dimen/margin_TB</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_R</item>
        <item name="android:layout_marginLeft">@dimen/margin_L</item>
        <item name="android:layout_marginTop">@dimen/margin_TB</item>
        <item name="background">@drawable/contorno_white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/margin_R</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/draw_pad</item>
    </style>

    <style name="text_view_label" parent="layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_R</item>
        <item name="android:layout_marginRight">@dimen/margin_R</item>
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:layout_marginTop">@dimen/margin_TB_label</item>

    </style>

    <style name="layout_edit" parent="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="background">@drawable/contorno_white</item>
        <item name="android:layout_marginRight">@dimen/margin_R</item>
        <item name="android:layout_marginLeft">@dimen/margin_R</item>
        <item name="android:layout_marginTop">@dimen/margin_TB</item>
    </style>

    <style name="layout_edit_box" parent="layout">
        <item name="android:layout_marginLeft">@dimen/margin_LRT</item>
        <item name="android:layout_marginRight">@dimen/margin_LRT</item>
    </style>

</resources>